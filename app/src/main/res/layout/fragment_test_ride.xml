<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".TestRideFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTestRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Ride"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <Button
        android:id="@+id/btnBookTestRide"
        android:layout_width="390dp"
        android:layout_height="59dp"
        android:layout_margin="16dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/suzuki_blue"
        android:drawableLeft="@drawable/ic_add"
        android:text="Book your Test Ride"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTestRide" />

    <ImageView
        android:id="@+id/ivNoData"
        android:layout_width="324dp"
        android:layout_height="234dp"
        android:src="@drawable/ic_no_data_found"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="No previous Data Found"
        app:layout_constraintEnd_toEndOf="@id/ivNoData"
        app:layout_constraintStart_toStartOf="@id/ivNoData"
        app:layout_constraintTop_toBottomOf="@id/ivNoData" />

</androidx.constraintlayout.widget.ConstraintLayout>