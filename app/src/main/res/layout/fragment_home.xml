<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#80000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingTop="48dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/welcome"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_button_background"
                android:contentDescription="@string/logout"
                android:src="@drawable/ic_logout"
                app:tint="@color/suzuki_blue" />
        </LinearLayout>

        <!-- Bike Service Card (Expandable) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvBikeService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#20FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="#40FFFFFF"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBikeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Bike Added"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/service_icon"
                                android:src="@drawable/ic_bike_service"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/service_checkup"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/time_icon"
                                android:src="@drawable/ic_clock"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/tvServiceDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="In 0 days"
                                android:textColor="#E0E0E0"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivBikeImage"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/bike_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_bike_placeholder" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/buttonExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/expand_collapse"
                    android:src="@drawable/ic_expand_more"
                    app:tint="@color/white" />
                <LinearLayout
                    android:id="@+id/expandable_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click here to swap your bikes..."
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnChange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/white"
                        android:text="Change"
                        android:textColor="@color/suzuki_blue" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Our Service Section Title -->
        <TextView
            android:id="@+id/tvOurServiceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/our_service"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvBikeService" />

        <!-- First Row -->
        <LinearLayout
            android:id="@+id/serviceRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvOurServiceTitle">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvServiceSchedule"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_service_schedule"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_schedule"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvServicePackages"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_service_packages"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_packages"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvServiceBooking"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_service_booking"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_booking"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvServiceHistory"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_service_history"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_history"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:id="@+id/serviceRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/serviceRow1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvDealers"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_dealers"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dealers"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvOffers"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_offers"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offers"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvBikeDocs"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_bike_docs"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bike_docs"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvWarrantyPolicy"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_warranty"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/warranty_policy"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Third Row (Parts & Bikes) -->
        <LinearLayout
            android:id="@+id/serviceRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/serviceRow2">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvParts"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_parts"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parts"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvBikes"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_bikes"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bikes"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvTestRide"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#40FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_test_ride"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_ride"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Explore -->
        <TextView
            android:id="@+id/tvExploreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/explore"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serviceRow3" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvExploreBanner1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvExploreTitle">
            <ImageView
                android:id="@+id/ivExploreBanner1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_test_ride" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Offers -->
        <TextView
            android:id="@+id/tvOffersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/offers"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvExploreBanner1" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvOffersBanner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvOffersTitle">
            <ImageView
                android:id="@+id/ivOffersBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_offers" />
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/cvOffersBanner" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
